$ORIGIN cpplanta.duckdns.org.
$TTL 3600
@       IN      SOA     ns1.cpplanta.duckdns.org. admin.cpplanta.duckdns.org. (
                        2023031501      ; serial (increment this)
                        3600            ; refresh
                        1800            ; retry
                        604800          ; expire
                        86400           ; minimum
)
                IN      NS      ns1.cpplanta.duckdns.org.
                IN      A       10.0.1.10  ; Internal IP for manager node

ns1             IN      A       10.0.1.10
www             IN      CNAME   @
api             IN      CNAME   @
pgadmin         IN      CNAME   @
viz             IN      CNAME   @

; Internal service discovery
postgres        IN      A       10.0.1.10
backend         IN      A       10.0.1.10
frontend        IN      A       10.0.1.10